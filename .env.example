# Paperless NGX Configuration
PAPERLESS_BASE_URL=http://your-paperless-host:8000/api
PAPERLESS_API_TOKEN=your_paperless_api_token_here

# LLM Configuration
OLLAMA_ENABLED=true
OLLAMA_MODEL=llama3.1:8b
OLLAMA_BASE_URL=http://localhost:11434

# OpenAI Fallback (optional)
OPENAI_API_KEY=sk-your_openai_api_key_here

# Email Account 1 (Gmail)
EMAIL_ACCOUNT_1_NAME="Gmail Account 1"
EMAIL_ACCOUNT_1_SERVER=imap.gmail.com
EMAIL_ACCOUNT_1_PORT=993
EMAIL_ACCOUNT_1_USERNAME=your-email@gmail.com
EMAIL_ACCOUNT_1_PASSWORD=your_app_specific_password
EMAIL_ACCOUNT_1_FOLDER=INBOX
EMAIL_ACCOUNT_1_SEARCH_SINCE_DAYS=30
EMAIL_ACCOUNT_1_ATTACHMENT_EXTENSIONS=.pdf,.png,.jpg,.jpeg,.doc,.docx,.xls,.xlsx,.txt

# Email Account 2 (IONOS/Generic IMAP) - Optional
EMAIL_ACCOUNT_2_NAME="IONOS Account"
EMAIL_ACCOUNT_2_SERVER=imap.ionos.de
EMAIL_ACCOUNT_2_PORT=993
EMAIL_ACCOUNT_2_USERNAME=your-email@yourdomain.com
EMAIL_ACCOUNT_2_PASSWORD=your_password
EMAIL_ACCOUNT_2_FOLDER=INBOX
EMAIL_ACCOUNT_2_SEARCH_SINCE_DAYS=30
EMAIL_ACCOUNT_2_ATTACHMENT_EXTENSIONS=.pdf,.png,.jpg,.jpeg,.doc,.docx,.xls,.xlsx,.txt

# Application Configuration
LOG_LEVEL=INFO
MAX_ATTACHMENT_SIZE_MB=50
PROCESSING_TIMEOUT_SECONDS=300

# Business Context (for LLM processing)
BUSINESS_NAME="Your Business Name"
BUSINESS_ADDRESS="Your Business Address"
