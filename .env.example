# Paperless NGX Configuration
PAPERLESS_BASE_URL=http://your-paperless-host:8000/api
PAPERLESS_API_TOKEN=your_paperless_api_token_here

# LLM Configuration - Configurable provider order
# Define the order in which LLM providers should be tried (comma-separated)
# Available providers: openai, ollama, anthropic, gemini, claude, custom
LLM_PROVIDER_ORDER=openai,ollama,anthropic  # First tries OpenAI, then Ollama, then Anthropic

# Provider 1: OpenAI (recommended for production)
OPENAI_ENABLED=true
OPENAI_API_KEY=sk-your_openai_api_key_here
OPENAI_MODEL=gpt-3.5-turbo  # or gpt-4, gpt-4-turbo
OPENAI_ORGANIZATION=  # Optional: Your OpenAI organization ID
OPENAI_MAX_RETRIES=3

# Provider 2: Ollama (local, free)
OLLAMA_ENABLED=true
OLLAMA_MODEL=llama3.1:8b  # or qwen2.5, gemma2, mistral, llama3.2
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MAX_RETRIES=3

# Provider 3: Anthropic Claude (placeholder for future integration)
ANTHROPIC_ENABLED=false
ANTHROPIC_API_KEY=sk-ant-your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-3-sonnet  # or claude-3-opus, claude-3-haiku
ANTHROPIC_MAX_RETRIES=3

# Provider 4: Google Gemini (placeholder for future integration)
GEMINI_ENABLED=false
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-pro  # or gemini-pro-vision
GEMINI_MAX_RETRIES=3

# Provider 5: Custom/Additional LLM (placeholder for future integration)
CUSTOM_LLM_ENABLED=false
CUSTOM_LLM_NAME=custom-provider
CUSTOM_LLM_API_KEY=your_custom_api_key_here
CUSTOM_LLM_BASE_URL=https://api.custom-llm.com
CUSTOM_LLM_MODEL=custom-model
CUSTOM_LLM_MAX_RETRIES=3

